{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "grafana-openshift"
    },
    "objects": [
        {
            "kind": "DeploymentConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${SERVICE_NAME}",
                "labels": {
                    "app": "${SERVICE_NAME}"
                }
            },
            "spec": {
                "strategy": {
                    "type": "Rolling",
                    "rollingParams": {
                        "updatePeriodSeconds": 1,
                        "intervalSeconds": 1,
                        "timeoutSeconds": 600,
                        "maxUnavailable": "25%",
                        "maxSurge": "25%"
                    },
                    "resources": {},
                    "activeDeadlineSeconds": 21600
                },
                "triggers": [
                    {
                        "type": "ConfigChange"
                    },
                    {
                        "type": "ImageChange",
                        "imageChangeParams": {
                            "automatic": true,
                            "containerNames": [
                                "${SERVICE_NAME}"
                            ],
                            "from": {
                                "kind": "ImageStreamTag",
                                "name": "${SERVICE_NAME}:latest"
                            }
                        }
                    }
                ],
                "replicas": 1,
                "test": false,
                "selector": {
                    "app": "${SERVICE_NAME}",
                    "deploymentconfig": "${SERVICE_NAME}"
                },
                "template": {
                    "metadata": {
                        "labels": {
                            "app": "${SERVICE_NAME}",
                            "deploymentconfig": "${SERVICE_NAME}"
                        }
                    },
                    "spec": {
                        "containers": [
                            {
                                "name": "${SERVICE_NAME}",
                                "image": "${SERVICE_NAME}:latest",
                                "ports": [
                                    {
                                        "containerPort": 3000,
                                        "protocol": "TCP"
                                    }
                                ],
                                "resources": {},
                                "livenessProbe": {
                                    "httpGet": {
                                        "path": "/",
                                        "port": 3000,
                                        "scheme": "HTTP"
                                    },
                                    "initialDelaySeconds": 300,
                                    "timeoutSeconds": 3,
                                    "periodSeconds": 10,
                                    "successThreshold": 1,
                                    "failureThreshold": 3
                                },
                                "readinessProbe": {
                                    "httpGet": {
                                        "path": "/",
                                        "port": 3000,
                                        "scheme": "HTTP"
                                    },
                                    "initialDelaySeconds": 10,
                                    "timeoutSeconds": 1,
                                    "periodSeconds": 10,
                                    "successThreshold": 1,
                                    "failureThreshold": 3
                                },
                                "terminationMessagePath": "/dev/termination-log",
                                "imagePullPolicy": "Always"
                            }
                        ],
                        "restartPolicy": "Always",
                        "terminationGracePeriodSeconds": 30,
                        "dnsPolicy": "ClusterFirst",
                        "securityContext": {}
                    }
                }
            }
        },
        {
            "kind": "Service",
            "apiVersion": "v1",
            "metadata": {
                "name": "${SERVICE_NAME}",
                "labels": {
                    "app": "${SERVICE_NAME}"
                }
            },
            "spec": {
                "ports": [
                    {
                        "name": "3000-tcp",
                        "protocol": "TCP",
                        "port": 3000,
                        "targetPort": 3000
                    }
                ],
                "selector": {
                    "app": "${SERVICE_NAME}",
                    "deploymentconfig": "${SERVICE_NAME}"
                },
                "type": "ClusterIP",
                "sessionAffinity": "None"
            }
        },
        {
            "kind": "Route",
            "apiVersion": "v1",
            "metadata": {
                "name": "${SERVICE_NAME}",
                "labels": {
                    "app": "${SERVICE_NAME}"
                }
            },
            "spec": {
                "host": "",
                "to": {
                    "kind": "Service",
                    "name": "${SERVICE_NAME}",
                    "weight": 100
                },
                "port": {
                    "targetPort": "3000-tcp"
                },
                "wildcardPolicy": "None"
            }
        },
        {
            "kind": "ImageStream",
            "apiVersion": "v1",
            "metadata": {
                "name": "centos",
                "labels": {
                    "build": "${SERVICE_NAME}"
                }
            },
            "spec": {
                "tags": [
                    {
                        "name": "7",
                        "from": {
                            "kind": "DockerImage",
                            "name": "centos:7"
                        },
                        "importPolicy": {},
                        "referencePolicy": {
                            "type": "Source"
                        }
                    }
                ]
            }
        },
        {
            "kind": "ImageStream",
            "apiVersion": "v1",
            "metadata": {
                "name": "${SERVICE_NAME}",
                "labels": {
                    "build": "${SERVICE_NAME}"
                }
            }
        },
        {
            "kind": "BuildConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${SERVICE_NAME}",
                "labels": {
                    "build": "${SERVICE_NAME}"
                }
            },
            "spec": {
                "triggers": [
                    {
                        "type": "GitHub",
                        "github": {
                            "secret": "A3bn9PssSpl5-W4UsiZd"
                        }
                    },
                    {
                        "type": "Generic",
                        "generic": {
                            "secret": "nFF6OUJqEwZoxriY_DNn"
                        }
                    },
                    {
                        "type": "ConfigChange"
                    },
                    {
                        "type": "ImageChange",
                        "imageChange": {}
                    }
                ],
                "runPolicy": "Serial",
                "source": {
                    "type": "Git",
                    "git": {
                        "uri": "https://github.com/OpenShiftDemos/grafana-openshift.git"
                    }
                },
                "strategy": {
                    "type": "Docker",
                    "dockerStrategy": {
                        "from": {
                            "kind": "ImageStreamTag",
                            "name": "centos:7"
                        }
                    }
                },
                "output": {
                    "to": {
                        "kind": "ImageStreamTag",
                        "name": "${SERVICE_NAME}:latest"
                    }
                },
                "resources": {},
                "postCommit": {},
                "nodeSelector": null
            }
        },


        {
            "kind": "DeploymentConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${SERVICE_NAME}-influxdb",
                "labels": {
                    "app": "${SERVICE_NAME}-influxdb"
                }
            },
            "spec": {
                "strategy": {
                    "type": "Rolling",
                    "rollingParams": {
                        "updatePeriodSeconds": 1,
                        "intervalSeconds": 1,
                        "timeoutSeconds": 600,
                        "maxUnavailable": "25%",
                        "maxSurge": "25%"
                    },
                    "resources": {},
                    "activeDeadlineSeconds": 21600
                },
                "triggers": [
                    {
                        "type": "ConfigChange"
                    },
                    {
                        "type": "ImageChange",
                        "imageChangeParams": {
                            "automatic": true,
                            "containerNames": [
                                "influxdb"
                            ],
                            "from": {
                                "kind": "ImageStreamTag",
                                "name": "${SERVICE_NAME}-influxdb:1.2-alpine"
                            }
                        }
                    }
                ],
                "replicas": 1,
                "test": false,
                "selector": {
                    "app": "${SERVICE_NAME}-influxdb",
                    "deploymentconfig": "${SERVICE_NAME}-influxdb"
                },
                "template": {
                    "metadata": {
                        "labels": {
                            "app": "${SERVICE_NAME}-influxdb",
                            "deploymentconfig": "${SERVICE_NAME}-influxdb"
                        }
                    },
                    "spec": {
                        "volumes": [
                            {
                                "name": "${SERVICE_NAME}-influxdb-data",
                                "persistentVolumeClaim": {
                                    "claimName": "${SERVICE_NAME}-influxdb-data"
                                }
                            }
                        ],
                        "containers": [
                            {
                                "name": "influxdb",
                                "image": "influxdb:1.2-alpine",
                                "ports": [
                                    {
                                        "containerPort": 8086,
                                        "protocol": "TCP"
                                    },
                                    {
                                        "containerPort": 8083,
                                        "protocol": "TCP"
                                    }
                                ],
                                "env": [
                                    {
                                        "name": "INFLUXDB_ADMIN_ENABLED",
                                        "value": "true"
                                    }
                                ],
                                "resources": {},
                                "volumeMounts": [
                                    {
                                        "name": "${SERVICE_NAME}-influxdb-data",
                                        "mountPath": "/var/lib/influxdb"
                                    }
                                ],
                                "livenessProbe": {
                                    "httpGet": {
                                        "path": "/query?q=show+stats",
                                        "port": 8086,
                                        "scheme": "HTTP"
                                    },
                                    "initialDelaySeconds": 300,
                                    "timeoutSeconds": 5,
                                    "periodSeconds": 60,
                                    "successThreshold": 1,
                                    "failureThreshold": 3
                                },
                                "readinessProbe": {
                                    "httpGet": {
                                        "path": "/query?q=show+stats",
                                        "port": 8086,
                                        "scheme": "HTTP"
                                    },
                                    "initialDelaySeconds": 10,
                                    "timeoutSeconds": 3,
                                    "periodSeconds": 10,
                                    "successThreshold": 1,
                                    "failureThreshold": 3
                                },
                                "terminationMessagePath": "/dev/termination-log",
                                "imagePullPolicy": "IfNotPresent"
                            }
                        ],
                        "restartPolicy": "Always",
                        "terminationGracePeriodSeconds": 30,
                        "dnsPolicy": "ClusterFirst",
                        "securityContext": {}
                    }
                }
            }
        },
        {
            "kind": "Service",
            "apiVersion": "v1",
            "metadata": {
                "name": "${SERVICE_NAME}-influxdb",
                "labels": {
                    "app": "${SERVICE_NAME}-influxdb"
                }
            },
            "spec": {
                "ports": [
                    {
                        "name": "8083-tcp",
                        "protocol": "TCP",
                        "port": 8083,
                        "targetPort": 8083
                    },
                    {
                        "name": "8086-tcp",
                        "protocol": "TCP",
                        "port": 8086,
                        "targetPort": 8086
                    }
                ],
                "selector": {
                    "deploymentconfig": "${SERVICE_NAME}-influxdb"
                },
                "type": "ClusterIP",
                "sessionAffinity": "None"
            }
        },
        {
            "kind": "Route",
            "apiVersion": "v1",
            "metadata": {
                "name": "${SERVICE_NAME}-influxdb-admin"
            },
            "spec": {
                "host": "",
                "to": {
                    "kind": "Service",
                    "name": "${SERVICE_NAME}-influxdb",
                    "weight": 100
                },
                "port": {
                    "targetPort": "8083-tcp"
                },
                "wildcardPolicy": "None"
            }
        },
        {
            "kind": "Route",
            "apiVersion": "v1",
            "metadata": {
                "name": "${SERVICE_NAME}-influxdb-api"
            },
            "spec": {
                "host": "",
                "to": {
                    "kind": "Service",
                    "name": "${SERVICE_NAME}-influxdb",
                    "weight": 100
                },
                "port": {
                    "targetPort": "8086-tcp"
                },
                "wildcardPolicy": "None"
            }
        },
        {
            "kind": "ImageStream",
            "apiVersion": "v1",
            "metadata": {
                "name": "${SERVICE_NAME}-influxdb",
                "labels": {
                    "app": "${SERVICE_NAME}-influxdb"
                }
            },
            "spec": {
                "tags": [
                    {
                        "name": "1.2-alpine",
                        "from": {
                            "kind": "DockerImage",
                            "name": "influxdb:1.2-alpine"
                        },
                        "importPolicy": {},
                        "referencePolicy": {
                            "type": "Source"
                        }
                    }
                ]
            }
        },
        {
            "kind": "PersistentVolumeClaim",
            "apiVersion": "v1",
            "metadata": {
                "name": "${SERVICE_NAME}-influxdb-data"
            },
            "spec": {
                "accessModes": [
                    "ReadWriteOnce"
                ],
                "resources": {
                    "requests": {
                        "storage": "1G"
                    }
                }
            }
        }
    ],
    "parameters": [
        {
            "name": "SERVICE_NAME",
            "displayName": "Grafana Service Name",
            "description": "The name of the OpenShift Service exposed for the Grafana container.",
            "value": "grafana"
        }
    ],
    "labels": {
        "template": "grafana-template"
    }

}
